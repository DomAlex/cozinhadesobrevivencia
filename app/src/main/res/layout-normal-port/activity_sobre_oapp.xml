
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="direwolf.cozinhadesobrevivenciadosolteiromoderno.SobreOApp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView android:text="Cozinha de Sobrevivência do Solteiro Moderno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/textViewTituloAppTelaSobre"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Versão 1.0"
        android:gravity="center"
        android:id="@+id/textViewNumeroDaVersaoTelaSobre"
        android:layout_below="@+id/textViewTituloAppTelaSobre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCodinomeTelaSobre"
        android:text="Codinome: Xablau !!"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textViewNumeroDaVersaoTelaSobre"
       android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desenvolvedorDoAplicativo"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/textViewCodinomeTelaSobre"
        android:text="Aplicativo desenvolvido por:"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/nomeDoDesenvolvedor"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/desenvolvedorDoAplicativo"
        android:text="Alex Araujo de Paula"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:id="@+id/imagemDoDesenvolvedor"
        android:layout_below="@id/nomeDoDesenvolvedor"
        android:layout_centerHorizontal="true"
        android:background="#abeafe"/>

    <TextView
        android:id="@+id/emailDoDesenvolvedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="E-mail: contato@araujodeveloper.com.br"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/imagemDoDesenvolvedor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogDoDesenvolvedor"
        android:textSize="22sp"
        android:text="Blog/Portfólio: wwww.araujodeveloper.com.br"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/emailDoDesenvolvedor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Agradecimento"
        android:layout_below="@id/blogDoDesenvolvedor"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Obrigado por usar este aplicativo!  :)"/>
    </RelativeLayout>
</ScrollView>
